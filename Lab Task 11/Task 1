#include<stdio.h>
int sum(int num);
int sum(int num)
{
    if(num==0)
    {
        return num/10;
    }
    else
    {
        int a=0;
        a=num%10;
        return a + sum(num/10);
    }
}
int main()
{
    int num;
    printf("Enter a number:");
    scanf("%d",&num);
    printf("\nThe sum of the numbers is: %d",sum(num));
    return 0;
}
